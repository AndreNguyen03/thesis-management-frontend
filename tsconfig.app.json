{
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"target": "ES2022",
		"useDefineForClassFields": true,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"erasableSyntaxOnly": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,

		/* Alias configuration */
		"baseUrl": "src",
		"paths": {
			"@/components/*": ["components/*"],
			"@/components/layout/*": ["components/layout/*"],
			"@/components/ui/*": ["components/ui/*"],
			"@/features/*": ["features/*"],
			"@/features/admin/*": ["features/admin/*"],
			"@/features/shared/*": ["features/shared/*"],
			"@/features/shared/ai-assistant/*": ["features/shared/ai-assistant/*"],
			"@/features/shared/dashboard/*": ["features/shared/dashboard/*"],
			"@/features/shared/workspace/*": ["features/shared/workspace/*"],
			"@/features/student/*": ["features/student/*"],
			"@/features/student/topic_list/*": ["features/student/topic_list/*"],
			"@/features/teacher/*": ["features/teacher/*"],
			"@/features/teacher/manage_topic/*": ["features/teacher/manage_topic/*"],
			"@/features/teacher/new_topic/*": ["features/teacher/new_topic/*"],
			"@/features/teacher/plagiarism_check/*": ["features/teacher/plagiarism_check/*"],
			"@/features/teacher/topic_registration/*": ["features/teacher/topic_registration/*"],
			"@/hooks/*": ["hooks/*"],
			"@/utils/*": ["utils/*"]
		}
	},
	"include": ["src"]
}
